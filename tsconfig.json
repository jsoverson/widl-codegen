{
    "compilerOptions": {
      "module": "commonjs",
      "strictNullChecks": true,
      "target": "es2018",
      "lib": ["esnext"],
      "outDir": "lib",
      "rootDir": "src",
      "declaration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false
    },
    "exclude": ["node_modules", "lib"],
    "include": ["src"]
  }